<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android" >
    <!--shadow to bottom and right-->
    <!--by pushing offset from top and left-->
    <item
        android:left="2dp"
        android:right="0dp"
        android:top="2dp"
        android:bottom="0dp">
        <shape
            android:shape="rectangle">
            <solid android:color="#030626" />
            <corners android:bottomRightRadius="6dp" android:bottomLeftRadius="6dp"
                android:topLeftRadius="6dp" android:topRightRadius="6dp"/>
        </shape>
    </item>
    <!--foreground-color to cover over non-shadow-->
    <!--need to also offset in opposite direction-->
    <item
        android:left="-1dp"
        android:right="6dp"
        android:top="-1dp"
        android:bottom="6dp">
        <shape
            android:shape="rectangle">
            <solid android:color="#2E2F31"/>
            <corners android:bottomRightRadius="6dp" android:bottomLeftRadius="6dp"
                android:topLeftRadius="6dp" android:topRightRadius="6dp"/>
        </shape>
    </item>
</layer-list>